<%= form_for(@word) do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.select :language, Word::LANGUAGES.map{|l| [t("words.languages.#{l}"), l]} %><br />
 </div>  
  <div class="field">
    <%= f.select :translations, Word.all.collect { |x| [x.name, x.id]}, {}, { :multiple => true }  %><br />
 </div> 

  <div class="actions">
    <%= f.submit %>
  </div>
 
<% end %>
